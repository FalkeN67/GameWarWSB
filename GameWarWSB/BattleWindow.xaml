<Window x:Class="GameWarWSB.BattleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameWarWSB"
        mc:Ignorable="d"
        Title="BattleWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Background="Green" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,23,0,0" Height="241" Width="143">
            <TextBlock Text="Poziom:"/>
            <Label x:Name="levelLabel" FontWeight="Bold" Margin="0 5 0 10"/>

            <TextBlock Text="Punkty życia:"/>
            <Label x:Name="healthPointsLabel" FontWeight="Bold" Margin="0 5 0 10"/>

            <TextBlock Text="Obrażenia:"/>
            <Label x:Name="damageLabel" FontWeight="Bold" Margin="0 5 0 10"/>

            <TextBlock Text="Złoto:"/>
            <Label x:Name="goldLabel" FontWeight="Bold" Margin="0 5 0 10"/>
        </StackPanel>


    </Grid>
</Window>
