<Window x:Class="GameWarWSB.BarracksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Koszary" VerticalAlignment="Top" TextAlignment="Center" FontSize="30" FontWeight="Black" Width="272"/>
        <Button Content="Trenuj walkę + 10 obrżeń (20 GOLD)" Click="IncreaseDamageButton_Click" Width="260" Height="40" Margin="80,113,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Trenuj obronę + 10 punktów życia (20 GOLD)" Click="IncreaseDefensButton_Click" Width="260" Height="40" Margin="478,113,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.464,1.358"/>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="346,217,0,0" Width="136">
            <TextBlock Text="Punkty życia:"/>
            <Label x:Name="healthPointsLabel" FontWeight="Bold" Margin="0 5 0 10"/>

            <TextBlock Text="Obrażenia:"/>
            <Label x:Name="damageLabel" FontWeight="Bold" Margin="0 5 0 10"/>

            <TextBlock Text="Złoto:"/>
            <Label x:Name="goldLabel" FontWeight="Bold" Margin="0 5 0 10"/>
        </StackPanel>
        
    </Grid>
</Window>