<Window x:Class="GameWarWSB.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:local="clr-namespace:GameWarWSB"
            Title="GameWarWSB" Height="450" Width="800">

    <Grid Cursor="Hand">
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Lobby" VerticalAlignment="Top" TextAlignment="Center" FontSize="30" FontWeight="Black" Width="272"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <Button Content="Walka" Width="120" Height="40" Margin="0 0 0 10" Click="FightButton_Click" />
            <Button Content="Sklep" Width="120" Height="40" Margin="0 0 0 10" Click="ShopButton_Click" />
            <Button Content="Baraki" Width="120" Height="40" Margin="0 0 0 10" Click="BarracksButton_Click" />
            <Button Content="Sen" Width="120" Height="40" Margin="0 0 0 10" Click="SleepButton_Click" />
            <Button Content="Statystyki" Width="120" Height="40" Margin="0 0 0 10" Click="CharacterStatsButton_Click" />
            <Button Content="Wyjście" Width="120" Height="40" Margin="0 0 0 10" Click="ExitButton_Click" />
        </StackPanel>
        



    </Grid>
</Window>